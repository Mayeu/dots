#set $background #FEFFFC
set $background #371724
#set $foreground #000000
set $foreground #94766E
set $gray       #FEFFFC
#set $primary    #C441B5
set $primary    #BA013A
set $secondary  #798486
set $tertiary   #A4B34F
set $warning    #40C4C4

# colors                BORDER      BACKGROUND TEXT        INDICATOR
client.focused          $primary    $primary   $background $primary
client.focused_inactive $background $primary   $foreground $background
client.unfocused        $gray       $gray      $background $secondary
client.urgent           $warning    $warning   $foreground $warning

new_window pixel 2

# font for window titles. ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:Hermit 9

