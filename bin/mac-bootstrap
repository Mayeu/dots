#! /usr/bin/env bash

#/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew analytics off
export HOMEBREW_NO_ANALYTICS=1

brew cask install    \
  iterm2             \
  firefox            \
  omnifocus          \
  bartender          \
  blockblock         \
  carbon-copy-cloner \
