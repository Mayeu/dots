  borgbackup \
  evernote \
  keybase \
  daisydisk \
  docker \
  dash \
  patchwork \
  spotify \
  calibre \
  virtualbox \
  virtualbox-extension-pack \
  vagrant \
  gimp \
  appcleaner \
  zoomus \
  tor-browser \
  superduper \
  gpg-suite \
  transmission \
  transmission-remote-gui \
  protonvpn \
  sublime-merge \
  vagrant-manager \
  now

brew install      \
  git             \
  git-extras      \
  bash            \
  zsh             \
  fish            \
  wget            \
  curl            \
  node            \
  nvm             \
