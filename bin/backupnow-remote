#! /usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

# Get borg backup passphrase
export BORG_PASSPHRASE="`pass show backup/rsync.net.borg-repository`"

# Backup the shit
borgmatic -c ~/.config/borgmatic/rsync.net.yaml --create

# Prune after the backup, I find that way better
borgmatic -c ~/.config/borgmatic/rsync.net.yaml --prune
