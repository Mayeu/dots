  mumble \
  sublime-merge \
  flotato \
  anki \
  go64 \
  timeular

  #ocenaudio \

echo "🍺 Install cli apps"
brew install      \
  git             \
  git-extras      \
  bash            \
  zsh             \
  fish            \
  wget            \
  curl            \
  node            \
  nvm             \
